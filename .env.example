# .env.example
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ASSISTANT_ID=asst_your_assistant_id_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Widget Configuration
WIDGET_TITLE=Голосовой помощник
